{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for OAuth Permissions",
    "type": "object",
    "properties": {
        "additionalProperties": false,
        "permissions": {
            "title": "Map of permission name to definition",
            "additionalProperties": false,
            "type": "object",
            "patternProperties": {
                "[\\w]+\\.[\\w]+[\\.[\\w]+]?": {
                    "$ref": "#/definitions/permission"
                }
            }
        }
    },
    "definitions": {
        "permission": {
            "type": "object",
            "title": "Permission definition",
            "additionalProperties": false,
            "properties": {
                "note": {
                    "type": "string"
                },

                "implicit": {
                    "type": "boolean"
                },

                "provisioningInfo": {
                    "$ref": "#/definitions/provisioningInfo"
                },
                
                "privilegeLevel": {
                    "type": "string",
                    "enum": [
                        "low",
                        "medium",
                        "high"
                    ]
                },
                
                "schemes": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "$ref": "#/definitions/scheme"
                        }
                    }
                },
                "pathSets": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/pathSet"
                    }
                }
            }
        },
        "provisioningInfo":{
            "type": "object",
            "properties": {
                "isHidden": {
                    "type": "boolean"
                },
                "ownerSecurityGroup": {
                    "type": "string"
                },
                "requiredEnvironments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "resourceAppId": {
                    "type": "string"
                }
            }
        },
        "pathSet": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "schemeKeys": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Application",
                            "DelegatedWork",
                            "DelegatedPersonal"
                        ]
                    }
                },
                "methods": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "GET",
                            "PUT",
                            "POST",
                            "DELETE",
                            "PATCH",
                            "HEAD",
                            "OPTIONS",
                            "<WriteMethods>",
                            "<ReadMethods>"
                        ]
                    }
                },
                "alsoRequires": {
                    "type": "string"
                },
                "paths": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "$ref": "#/definitions/path"
                        }
                    }
                },
                "includedProperties": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "excludedProperties": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "path": {
            "type": "string"
        },
        "scheme": {
            "type": "object",
            "properties": {
                "requiresAdminConsent": {
                    "type": "boolean"
                },
                "adminDisplayName": {
                    "type": "string"
                },
                "adminDescription": {
                    "type": "string"
                },
                "userConsentDisplayName": {
                    "type": "string"
                },
                "userConsentDescription": {
                    "type": "string"
                }
            }
        }
    }
}